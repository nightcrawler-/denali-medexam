<% content_for :workplaces do %>
active
<% end %>

<!-- Basic Tables start -->
<div class="row" id="basic-table">
  <div class="col-12">
    <div class="card">
      <div class="card-header">
        <h4 class="card-title">Workplaces</h4>
      </div>
      <div class="card-content">
        <div class="card-body">
          <p class="card-text">Available workplaces.</p>
          <!-- Table with outer spacing -->


          <div class="table-responsive">
            <table class="table">
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Registration</th>
                  <th>Location</th>
                  <th>Phone</th>
                  <th>Address</th>
                  <th>Email</th>
                  <th colspan="3"></th>
                </tr>
              </thead>

              <tbody>
                <% @workplaces.each do |workplace| %>
                <tr>
                  <td><%= workplace.name %></td>
                  <td><%= workplace.registration %></td>
                  <td><%= workplace.location %></td>
                  <td><%= workplace.phone %></td>
                  <td><%= workplace.address %></td>
                  <td><%= workplace.email %></td>
                  <td><%= link_to 'Show', workplace %></td>
                  <td><%= link_to 'Edit', edit_workplace_path(workplace) %></td>
                  <% if current_user.has_role?(:admin) %>
                  <td><%= link_to 'Destroy', workplace, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  <% end %>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
          <p>
            <div class="digg_pagination">
              <%= will_paginate @workplaces, :container => false %>
            </div>
          </p>
          <%= link_to '<button type="button" class="btn btn-outline-dark mr-1 mb-1">New Workplace</button>'.html_safe, new_workplace_path %>
        </div>
      </div>
    </div>
  </div>
</div>